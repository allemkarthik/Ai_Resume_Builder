{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",

    "rootDir": "./",
    "outDir": "dist",

    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,

    "types": ["node"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}